<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_text"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOODY KEY"
            android:textColor="@color/orange"
            android:textSize="220px"
            android:layout_marginTop="450px"
            android:gravity="center"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/img_splash"
            android:layout_width="175dp"
            android:layout_height="160dp"
            android:background="@drawable/key_food" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/define_dimen_20"
            app:lottie_autoPlay="true"
            app:lottie_cacheComposition="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/juice_drink"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/define_dimen_10">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|bottom"
            android:layout_marginBottom="@dimen/define_dimen_10"
            android:text="Â©2023 FK ENTERTAINMENT"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="27px" />
    </LinearLayout>
</RelativeLayout>